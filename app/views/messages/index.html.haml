.flash-box
  .notice
    ログインしました。
.wrapper
  .chat-side
    .side-header
      .side-header__box
        %p.side-header__box__user-name
          test-user
        %ul.side-header__box__menu
          %li.side-header__box__menu__new-group
            = link_to root_path do
              = fa_icon "edit"
          %li.side-header__box__menu__edit-user
            = link_to root_path do
              = fa_icon "cog"
        
    .groups
      = link_to root_path do
        .group
          %p.group__group-name
            test-group
          %p.group__latest-message
            さようなら
      = link_to root_path do
        .group
          %p.group__group-name
            sample-group
          %p.group__latest-message
            おはよう

  .chat-main
    .main-header
      .main-header__left-box
        %h2.main-header__left-box__current-group
          test-group
        %ul.main-header__left-box__member-list 
          Member&nbsp;:
          %li.main-header__left-box__member-list__member
            &nbsp;Bob
      = link_to root_path do
        .main-header__edit-btn
          Edit
    .messages
      .message
        .message__upper-info
          %p.message__upper-info__taker
            test-user
          %p.message__upper-info__date
            2050/01/01(Fri)26:10:10
        .message__text
          こんにちは
    .form
      %form.new_message#new_message
        .input-box
          %input.input-box__text(placeholder="type a message" type="text")
          %label.input-box__image
            = fa_icon "image"
            %input.input-box__image__file(type="file")
        %input.submit-btn(type="submit" value="Send")